<form method="post" action="{{ path('app_pilulier_delete', {'id': pilulier.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce pilulier ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pilulier.id) }}">
    <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded mt-4 flex items-center justify-center transition duration-300">
        <i data-lucide="trash-2" class="w-4 h-4 mr-2"></i>
        Supprimer
    </button>
</form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        lucide.createIcons();
    });
</script>